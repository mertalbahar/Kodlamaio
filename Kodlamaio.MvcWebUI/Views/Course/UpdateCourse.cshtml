@model UpdateCourseRequest

<div>
    <h1 class="my-3">Course Update <span class="text-primary">[@Model.Title]</span></h1>
</div>

<form method="post" asp-action="UpdateCourse">
    <input type="hidden" asp-for="Id" />

    <div class="w-50">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Title" asp-for="Title">
        </div>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Description" asp-for="Description">
        </div>
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="ImageUrl" asp-for="ImageUrl">
        </div>

        <div>
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-danger" asp-controller="Course" asp-action="DeleteCourse" asp-route-id="@Model.Id">Delete</a>
        </div>
    </div>
</form>